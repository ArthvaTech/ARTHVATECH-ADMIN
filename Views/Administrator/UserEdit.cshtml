@{
	ViewBag.Pageheader = "User Details";
}
@model ARTHVATECH_ADMIN.Models.Users
<div class="card-header">
	<h2 class="card-title mb-0" style="align-content:center">@Model.FirstName @Model.LastName</h2>
</div>
<form method="post" action="@Url.Action("Save", "Administrator")">
    @Html.HiddenFor(m => m.Id)
    @Html.HiddenFor(m => m.TempCode)
    <div class="row">
        <div class="col-12 col-lg-6">
            <div class="card flex-fill">

                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Email:</h5>
                    </div>
                    <div class="card-body">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Please Enter Email", disabled = "disabled" })
                        @Html.HiddenFor(m => m.Username)
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Last Name:</h5>
                    </div>
                    <div class="card-body">
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Please Enter Last Name" })
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Designation:</h5>
                    </div>
                    <div class="card-body">
                        @Html.TextBoxFor(m => m.Designation, new { @class = "form-control", placeholder = "Input" })
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">First Name:</h5>
                </div>
                <div class="card-body">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Please Enter First Name" })
                </div>
            </div>
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Roles</h5>
                </div>
                <div class="card-body">
                    @Html.DropDownListFor(m => m.RoleId, new SelectList(ViewBag.Roles, "Value", "Text", Model.RoleId), "Select Role", new { @class = "form-select mb-3" })
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-body text-center">
            <div class="mb-3">
                <button class="btn btn-primary btn-lg" type="submit">Save</button>
            </div>
        </div>
    </div>
</form>